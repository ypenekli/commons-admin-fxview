<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="com.yp.core.fxview.admin.GroupAU" hgap="5" vgap="5" fx:id="self"  >
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="1"
		GridPane.hgrow="ALWAYS" prefWidth="600">
		<ToolBar  HBox.hgrow="ALWAYS">
			<Button onAction="#hide" text="%Kapat"
				disable="${controller.gosterMeKapat}" />
			<Separator />
			<Button onAction="#refresh" text="%Yenile"
				disable="${controller.gosterMeYenile}" />
			<Separator />
			<Button onAction="#add" text="%EkleYeni"
				disable="${controller.gosterMeEkle}" />
			<Separator />
			<Button onAction="#save" text="${controller.etiketKaydet}"
				disable="${controller.gosterMeKaydet}" />
			<Separator />
			<Button onAction="#report" text="%Raporla"
				disable="${controller.gosterMeRaporla}" />
			<Separator />
			<Pane HBox.hgrow="ALWAYS" />
			<Label text="${controller.islemack}" textFill="blue" />
		</ToolBar>
		<MenuBar>
			<Menu text="%Islemler">
				<MenuItem onAction="#close" text="%Kapat"
					disable="${controller.gosterMeKapat}" />
				<MenuItem onAction="#refresh" text="%Yenile"
					disable="${controller.gosterMeYenile}" />
				<MenuItem onAction="#add" text="%EkleYeni"
					disable="${controller.gosterMeEkle}" />
				<MenuItem onAction="#save"
					text="${controller.etiketKaydet}"
					disable="${controller.gosterMeKaydet}" />
				<MenuItem onAction="#report" text="%Raporla"
					disable="${controller.gosterMeRaporla}" />
			</Menu>
			<HBox.margin>
				<Insets left="0.0" />
			</HBox.margin>
			<padding>
				<Insets bottom="5.0" top="3.0" />
			</padding>
		</MenuBar>
	</HBox>	
	<Label GridPane.rowIndex="2" text="%FrmGroup.Header">
		<font>
			<Font name="System Bold" size="18.0" />
		</font>
	</Label>	

	<GridPane  hgap="5" vgap="5" GridPane.rowIndex="4">
	
      	<Label 		GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="right"  text="%FrmGroup.Id" style="-fx-font-weight: bold;"/>
		<Label 		GridPane.columnIndex="2" GridPane.rowIndex="1" text="%Ikinokta"/>
		<Label  	GridPane.columnIndex="3" GridPane.rowIndex="1" fx:id="txtGroupId" />
			
		<Label 		GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="right" text="%FrmProjectAUL.Name" style="-fx-font-weight: bold;"/>
		<Label 		GridPane.columnIndex="1" GridPane.rowIndex="2" text="*" style="-fx-font-weight: bold;-fx-text-fill: red;"/>
		<Label 		GridPane.columnIndex="2" GridPane.rowIndex="2" text="%Ikinokta" />
		<ComboBox	GridPane.columnIndex="3" GridPane.rowIndex="2" fx:id="chProjects" maxWidth="300"  promptText="%FrmProjectAUL.Selectproject" />
		
		<Label 		GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="right" text="%FrmGroup.Name" style="-fx-font-weight: bold;"/>
		<Label 		GridPane.columnIndex="1" GridPane.rowIndex="3" text="*" style="-fx-font-weight: bold;-fx-text-fill: red;"/>
		<Label 		GridPane.columnIndex="2" GridPane.rowIndex="3" text="%Ikinokta" />
		<TextField  GridPane.columnIndex="3" GridPane.rowIndex="3" fx:id="txtGroupName" prefWidth="350" />
		
		<Label 		GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="4" text="%Zorunlu" style="-fx-text-fill: red;" />
		<Label 		GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="4" style="-fx-text-fill: blue;" />			
		<Button 	GridPane.columnIndex="0" GridPane.rowIndex="6"  GridPane.halignment="right"  GridPane.columnSpan="2" defaultButton="true" onAction="#save" text="%Kaydet"  />		
		
		<Button 	GridPane.columnIndex="2" GridPane.rowIndex="6"  GridPane.halignment="right" GridPane.columnSpan="2" onAction="#close" text="%Kapat" />
		
	   	<padding>
			<Insets bottom="5" left="5" right="2" top="2" />
		</padding>				
	</GridPane>
</GridPane>
