<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" 
	fx:controller="com.yp.core.fxview.admin.ProjectAU" hgap="5" vgap="5" fx:id="self"  >
	<HBox GridPane.columnIndex="0" GridPane.rowIndex="1"
		GridPane.hgrow="ALWAYS" prefWidth="600">
		<ToolBar  HBox.hgrow="ALWAYS">
			<Button onAction="#hide" text="%Kapat"
				disable="${controller.gosterMeKapat}" />
			<Separator />
			<Button onAction="#refresh" text="%Yenile"
				disable="${controller.gosterMeYenile}" />
			<Separator />
			<Button onAction="#add" text="%EkleYeni"
				disable="${controller.gosterMeEkle}" />
			<Separator />
			<Button onAction="#save" text="${controller.etiketKaydet}"
				disable="${controller.gosterMeKaydet}" />
			<Separator />
			<Button onAction="#report" text="%Raporla"
				disable="${controller.gosterMeRaporla}" />
			<Separator />
			<Pane HBox.hgrow="ALWAYS" />
			<Label text="${controller.islemack}" textFill="blue" />
		</ToolBar>
		<MenuBar>
			<Menu text="%Islemler">
				<MenuItem onAction="#close" text="%Kapat"
					disable="${controller.gosterMeKapat}" />
				<MenuItem onAction="#refresh" text="%Yenile"
					disable="${controller.gosterMeYenile}" />
				<MenuItem onAction="#add" text="%EkleYeni"
					disable="${controller.gosterMeEkle}" />
				<MenuItem onAction="#save"
					text="${controller.etiketKaydet}"
					disable="${controller.gosterMeKaydet}" />
				<MenuItem onAction="#report" text="%Raporla"
					disable="${controller.gosterMeRaporla}" />
			</Menu>
			<HBox.margin>
				<Insets left="0.0" />
			</HBox.margin>
			<padding>
				<Insets bottom="5.0" top="3.0" />
			</padding>
		</MenuBar>
	</HBox>	
	<Label GridPane.rowIndex="2" text="%FrmProjectAUL.Header">
		<font>
			<Font name="System Bold" size="18.0" />
		</font>
	</Label>

	<GridPane  hgap="5" vgap="5" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS">	
        <Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Id" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="2" />
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="2" />
		<Label fx:id="txtId" GridPane.columnIndex="3" GridPane.rowIndex="2" />
			
		<Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Name" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="3" />
		<Label style="-fx-font-weight: bold;-fx-text-fill: red;" text="*" GridPane.columnIndex="1" GridPane.rowIndex="3" />
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="3" />
		<TextField fx:id="txtName" prefWidth="300" GridPane.columnIndex="3" GridPane.rowIndex="3" />
			
		<Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Description" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="4" />
		<Label style="-fx-font-weight: bold;-fx-text-fill: red;" text="*" GridPane.columnIndex="1" GridPane.rowIndex="4" />
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="4" />
		<TextField fx:id="txtDesc" prefWidth="300" GridPane.columnIndex="3" GridPane.rowIndex="4" />
		
		<Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Url" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="5" />
		<Label style="-fx-font-weight: bold;-fx-text-fill: red;" text="*" GridPane.columnIndex="1" GridPane.rowIndex="5" />
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="5" />
		<TextField fx:id="txtUrl" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="5" />
		
		<Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Target" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="6" />
		<Label style="-fx-font-weight: bold;-fx-text-fill: red;" text="*" GridPane.columnIndex="1" GridPane.rowIndex="6" />
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="6" />					
		<ComboBox fx:id="scmTarget" maxWidth="100" promptText="%FrmProjectAUL.Sell.Target" GridPane.columnIndex="3" GridPane.rowIndex="6" />   
		
		<Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Author" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="7" />		
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="7" />
		<TextField fx:id="txtAuthor" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="7" />
		
		<Label style="-fx-font-weight: bold;" text="%FrmProjectAUL.Organization" GridPane.columnIndex="0" GridPane.halignment="right" GridPane.rowIndex="8" />		
		<Label text="%Ikinokta" GridPane.columnIndex="2" GridPane.rowIndex="8" />
		<TextField fx:id="txtOrganization" prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="8" />          
        
        
		<Button 	GridPane.columnIndex="0" GridPane.rowIndex="9"  GridPane.halignment="right"  GridPane.columnSpan="2" fx:id="btnSave" defaultButton="true" onAction="#save" text="%Kaydet"  />		
		
		<Button 	GridPane.columnIndex="2" GridPane.rowIndex="9"  GridPane.halignment="right" GridPane.columnSpan="2" onAction="#close" text="%Kapat" />
		
	   	<padding>
			<Insets bottom="5" left="5" right="2" top="2" />
		</padding>				
	</GridPane>	
</GridPane>
